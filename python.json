	"Input de texto": {
		"prefix": "textInput",
		"body": [
			"input('$1')",
		],
		"description": "Cria um input de String"
	},
	"Input Float": {
		"prefix": "floatInput",
		"body": [
			"float(input('$1'))",
		],
		"description": "Cria um input de Float"
	},
	"Input int": {
		"prefix": "intInput",
		"body": [
			"int(input('$1'))",
		],
		"description": "Cria um input de int"
	},
	"Py Function": {
		"prefix": "pyfunction",
		"body": [
			"def ${1:defName}(${2:params}):",
		    "${3:code}"
		],
